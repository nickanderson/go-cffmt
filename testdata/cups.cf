bundle agent cups
{

 commands:

  IsCupsServer.cupsd_updated::
   "/usr/sbin/service cups stop;
    /bin/rm /etc/cups/printers.conf.O;
    /bin/rm /etc/cups/subscriptions.conf.O;
    /bin/rm /var/cache/cups/job.cache.O;
    /usr/sbin/service cups start"
		contain => in_shell;
  # /bin/rm /var/cache/cups/*.data;

  IsCupsServer.cupsd_out_of_range::
   "/usr/sbin/service cups restart";

  IsCupsClient.cupsd_out_of_range::
   "/usr/sbin/service cups stop 2> /dev/null; /bin/rm -f /etc/init/cups.conf"
		contain => in_shell;
}
